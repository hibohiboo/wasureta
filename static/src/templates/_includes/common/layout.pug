//- 変数一覧
- var title="かたすみ倉庫"
- var description="hiboの開発記録です。"
- var keywords="TRPG,開発,ツール"
- var robots="index"

doctype html
html(lang='ja')
  block variables
  head
    title= title
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')

    //- 従来型のメタデータ
    meta(name='description', content=description)
    //- 記事のキーワードをカンマで区切る
    meta(name='keywords', content=keywords)
    meta(name='robots', content=robots)
    //- SNSでページが共有された時に表示する用のメタデータ。
    //- サイト名
    meta(name='og:sitename', content=title) 
    //- 言語の種類
    meta(name='og:locale', content="ja_JP") 
    //- タイトル
    meta(name='og:title', content=title) 
    //- 概要
    meta(name='og:description', content=description)
    //- 記事のURL
    meta(name='og:url', content="https://wasureta-d6b34.firebaseapp.com/") 
    //- twitter
    meta(name="twitter:site" content="@hibohiboo")
    //- twittercard（申請必要
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:creator" content="@hibohiboo")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=description)
    //-  meta(name="twitter:image" content="https://wasureta-d6b34.firebaseapp.com/")
      meta(name='og:type', content="game") 
    block css
    link(href='assets/css/style.css', rel='stylesheet')
    script(defer src="https://use.fontawesome.com/releases/v5.0.2/js/all.js")
