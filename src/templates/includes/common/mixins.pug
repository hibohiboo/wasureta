
mixin param(param)
  i.material-icons=param

mixin actionCard(name, image, param, text)
    .col.s12.m6.l3
      .card
        .card-image
          img(src=image alt=name)
        .card-content
          span.card-title.black-text= name
          ul.collection.with-header
            li.collection-header #[+param(param)]
            li.collection-item= text
mixin checkbox(name, value, checked)
  label
    input(type="checkbox", value=value, checked=checked) 
    span= name
