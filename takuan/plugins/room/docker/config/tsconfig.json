{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "strictNullChecks": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": false,
    "composite": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}